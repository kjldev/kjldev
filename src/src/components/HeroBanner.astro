---
import type { ImageMetadata } from 'astro';

interface Props {
	backgroundImgSrc: ImageMetadata;
	title: string;
	subtitle?: string;
}

const { backgroundImgSrc, title, subtitle } = Astro.props;
---

<div
	class='w-full p-8 relative'
	style={`background: url(${backgroundImgSrc.src}) center/cover no-repeat;`}
>
	<!-- Light theme overlay to brighten the dark background -->
	<div class='absolute inset-0 bg-white/50 dark:bg-transparent'></div>
	
	<div
		class='relative flex flex-col justify-center items-center bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm px-6 py-20 text-center max-w-4xl mx-auto text-gray-900 dark:text-gray-100 shadow-lg rounded-lg'
	>
		<h1 class='text-5xl font-bold mb-10'>{title}</h1>
		{subtitle && <h2 class='text-2xl mb-10 font-semibold'>{subtitle}</h2>}

		<slot />
	</div>
</div>

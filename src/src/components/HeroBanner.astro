---
import type { ImageMetadata } from 'astro';

interface Props {
	backgroundImgSrc: ImageMetadata;
	title: string;
	subtitle?: string;
}

const { backgroundImgSrc, title, subtitle } = Astro.props;
---

<!-- Hero banner with distinct light/dark themes -->
<div class="w-full min-h-screen flex items-center justify-center relative">
	<!-- Light mode: Clean white background with subtle pattern -->
	<div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-white dark:hidden"></div>
	
	<!-- Dark mode: Background image with overlay -->
	<div class="absolute inset-0 hidden dark:block" style={`background: url(${backgroundImgSrc.src}) center/cover no-repeat;`}></div>
	<div class="absolute inset-0 hidden dark:block bg-black/40"></div>
	
	<!-- Content container -->
	<div class="relative z-10 max-w-4xl mx-auto px-6 py-20 text-center">
		<!-- Light mode content -->
		<div class="dark:hidden">
			<div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-200 p-12">
				<h1 class="text-5xl font-bold mb-6 text-gray-900">{title}</h1>
				{subtitle && <h2 class="text-2xl mb-8 text-gray-600 font-medium">{subtitle}</h2>}
				<div class="text-gray-700">
					<slot />
				</div>
			</div>
		</div>
		
		<!-- Dark mode content -->
		<div class="hidden dark:block">
			<div class="bg-gray-900/90 backdrop-blur-sm rounded-2xl shadow-2xl border border-gray-700 p-12">
				<h1 class="text-5xl font-bold mb-6 text-white">{title}</h1>
				{subtitle && <h2 class="text-2xl mb-8 text-gray-200 font-medium">{subtitle}</h2>}
				<div class="text-gray-100">
					<slot />
				</div>
			</div>
		</div>
	</div>
</div>

---
import type { ImageMetadata } from 'astro';

interface Props {
	backgroundImgSrc: ImageMetadata;
	title: string;
	subtitle?: string;
}

const { backgroundImgSrc, title, subtitle } = Astro.props;
---

<!-- Hero banner with background image for both light and dark themes -->
<div
	class='w-full min-h-screen flex items-center justify-center relative overflow-hidden'
>
	<!-- Background image for both modes -->
	<div
		class='absolute inset-0 bg-cover bg-center bg-no-repeat'
		style={`background-image: url(${backgroundImgSrc.src});`}
	>
	</div>

	<!-- Light mode overlay -->
	<div class='absolute inset-0 bg-white/15 dark:hidden'></div>

	<!-- Dark mode overlay -->
	<div class='absolute inset-0 hidden dark:block bg-black/40'></div>

	<!-- Content container -->
	<div class='relative z-10 max-w-4xl mx-auto px-6 py-20 text-center'>
		<!-- Light mode content -->
		<div class='block dark:hidden'>
			<div
				class='bg-white/95 backdrop-blur-sm rounded-2xl shadow-2xl border-2 border-blue-200 p-12 max-w-4xl'
			>
				<h1 class='text-5xl font-bold mb-6 text-gray-900'>{title}</h1>
				{
					subtitle && (
						<h2 class='text-2xl mb-8 text-gray-600 font-medium'>{subtitle}</h2>
					)
				}
				<div class='text-gray-700 text-lg leading-relaxed'>
					<slot />
				</div>
			</div>
		</div>

		<!-- Dark mode content -->
		<div class='hidden dark:block'>
			<div
				class='bg-gray-900/90 backdrop-blur-sm rounded-2xl shadow-2xl border-2 border-purple-500 p-12'
			>
				<h1 class='text-5xl font-bold mb-6 text-white'>{title}</h1>
				{
					subtitle && (
						<h2 class='text-2xl mb-8 text-gray-200 font-medium'>{subtitle}</h2>
					)
				}
				<div class='text-gray-100'>
					<slot />
				</div>
			</div>
		</div>
	</div>
</div>

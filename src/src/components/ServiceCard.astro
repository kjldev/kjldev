---
import Separator from './Separator.astro';

interface Props {
	imageSrc: string;
	alt: string;
	title: string;
}
---

<div class='flex flex-col items-center w-full md:w-1/3 px-2 mb-6 md:mb-0'>
	<Separator class='block md:hidden' />
	<img
		src={Astro.props.imageSrc}
		alt={Astro.props.alt}
		loading='lazy'
		class='hidden md:block w-full h-48 object-cover'
	/>
	<h4 class='mt-4 mb-4 text-2xl'>{Astro.props.title}</h4>
	<slot />
</div>

---
import Pill from '../Pill.astro';

interface Props {
    status: string;
    size?: 'small' | 'large';
}

const { status, size = 'small' } = Astro.props as Props;

const statusMap: Record<
    string,
    { text: string; emoji: string; bgColor: string }
> = {
    thinking: {
        text: 'Thinking',
        emoji: '🤔',
        bgColor: 
            'bg-gradient-to-r from-yellow-500 to-yellow-600',
    },
    'in-progress': {
        text: 'In Progress',
        emoji: '🚧',
        bgColor:
            'bg-gradient-to-r from-blue-500 to-indigo-600',
    },
    live: {
        text: 'Live',
        emoji: '🚀',
        bgColor:
            'bg-gradient-to-r from-green-500 to-teal-500',
    },
    retired: {
        text: 'Retired',
        emoji: '🪦',
        bgColor: 'bg-gradient-to-r from-gray-500 to-gray-700',
    },
    want: {
        text: 'Want',
        emoji: '💖',
        bgColor:
            'bg-gradient-to-r from-pink-500 to-red-500',
    },
};

const defaultStatus = {
    text: 'Unknown',
    emoji: '❓',
    bgColor: 'bg-gray-500',
};

const { text, emoji, bgColor } = statusMap[status] || defaultStatus;
---

<Pill
    emoji={emoji}
    text={text}
    size={size}
    bgColor={bgColor}
    textColor='text-white' />
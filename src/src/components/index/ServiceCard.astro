---
import Separator from '../Separator.astro';

interface Props {
	imageSrc: string;
	alt: string;
	title: string;
}

const { imageSrc, alt, title } = Astro.props;
---

<div class='flex flex-col items-center w-full md:w-1/3 px-2 mb-6 md:mb-0 text-gray-900 dark:text-gray-100'>
	<Separator className='block md:hidden' />
	<img
		src={imageSrc}
		alt={alt}
		loading='lazy'
		class='hidden md:block w-full h-48 object-cover'
	/>
	<h4 class='mt-4 mb-4 text-2xl'>{title}</h4>
	<slot />
</div>

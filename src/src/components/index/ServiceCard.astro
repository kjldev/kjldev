---
import Separator from '../Separator.astro';

interface Props {
	imageSrc: string;
	alt: string;
	title: string;
}

const { imageSrc, alt, title } = Astro.props;
---

<div class='flex flex-col items-center w-full md:w-1/3 px-4 mb-8 md:mb-0'>
	<Separator className='block md:hidden' />
	<div
		class='bg-white dark:bg-gray-900 rounded-lg shadow-lg overflow-hidden flex flex-col h-full'
	>
		<img
			src={imageSrc}
			alt={alt}
			loading='lazy'
			class='w-full h-48 object-cover flex-shrink-0'
		/>
		<div class='p-6 flex-grow flex flex-col'>
			<h4 class='mb-4 text-2xl font-bold text-gray-900 dark:text-white'>
				{title}
			</h4>
			<div class='text-gray-600 dark:text-gray-300 flex-grow'>
				<slot />
			</div>
		</div>
	</div>
</div>
